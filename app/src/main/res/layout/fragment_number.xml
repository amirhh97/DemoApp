<RelativeLayout android:id="@+id/child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/action_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="45dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="شماره موبایلی را که قصد خرید شارژ برای آن را دارید وارد کنید:"
        android:gravity="right"/>

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:hint="09*********"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="11"
        android:padding="15dp"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/txt_operatpor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="لطفا اپراتور را وارد نمایید:"
        android:layout_below="@id/phone_number"
        android:gravity="right"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:id="@+id/operators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txt_operatpor"
        android:gravity="center"

        >
        <ImageView
            android:id="@+id/img_irancell"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@drawable/irancell_off"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/img_rightel"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@drawable/rightel_off"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/img_hamrahaval"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@drawable/hamrah_avval_off"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_gold_button"
        android:text="مرحله بعد"
        android:layout_alignParentBottom="true"
        android:textColor="#434343"
        />
</RelativeLayout>
